{
  "name": "@patternfly/patternfly-component-schemas",
  "version": "1.0.0",
  "description": "JSON Schema and Zod schema metadata for PatternFly React components",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:json && npm run build:zod",
    "build:json": "node scripts/generate-schemas.js component-metadata.json",
    "build:zod": "node scripts/generate-zod-schemas.js component-metadata.json",
    "dev": "node scripts/generate-schemas.js --watch",
    "clean": "rm -rf components/*/ zod/",
    "rebuild": "npm run clean && npm run build",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "patternfly",
    "react",
    "components",
    "json-schema",
    "zod",
    "validation",
    "typescript",
    "metadata"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "semantic-release": "^22.0.12"
  },
  "peerDependencies": {
    "zod": "^4.1.12"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "files": [
    "components/",
    "zod/",
    "index.js",
    "README.md"
  ],
  "exports": {
    ".": "./index.js",
    "./zod": "./zod/index.ts",
    "./components/*": "./components/*/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patternfly/patternfly-component-schemas.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
